<h1>確認画面</h1>
<%= form_with(model: @user, url: users_path, local: true) do |form| %>
  <!-- 確認画面でアップロードした画像を表示させるための記述 -->
  <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :email %>
  <%= form.hidden_field :introduce %>
  <%= form.hidden_field :password %>
  <%= form.hidden_field :password_confirmation %>

  <th><%= form.submit "アカウントを作成する" %></th>
<% end %>

<%= form_with(model:@user, url:new_feed_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <th><%= form.submit "投稿一覧へ", name: "back" %></th>
<% end %>